                        <Button fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#loginClick" prefHeight="28.0" prefWidth="100.0" style="-fx-background-radius: 20; -fx-background-color: #e63946;" styleClass="buttons" stylesheets="@../../style/loginview.css" text="LOGIN" textFill="WHITE">
