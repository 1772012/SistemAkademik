                        <Label fx:id="usernameLabel" text="USERNAME" textFill="WHITE">
                            <font>
                                <Font name="Berlin Sans FB" size="20.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
